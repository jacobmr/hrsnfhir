# Production Environment Configuration for Azure App Service
# Copy this to .env and update with your actual values

# Database Configuration
# Replace with your Azure Database for PostgreSQL connection string
DATABASE_URL=postgresql://hrsn_admin@your-server:your-password@your-server.postgres.database.azure.com:5432/hrsn_production?sslmode=require

# Redis Configuration (Azure Cache for Redis)
# Replace with your Azure Redis connection string
REDIS_URL=rediss://your-redis-name.redis.cache.windows.net:6380?ssl_cert_reqs=required

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Security Configuration
# Generate strong random keys for production
SECRET_KEY=your-super-secret-key-here-change-this-in-production
API_KEY_HEADER=X-API-Key
DEFAULT_API_KEY=your-production-api-key-change-this

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/hrsn-production.log

# FHIR Configuration
STRICT_FHIR_VALIDATION=true
REQUIRE_ALL_SCREENING_QUESTIONS=false

# Azure App Service specific
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false
WEBSITES_PORT=8000

# SSL/TLS Configuration for Azure
FORCE_SSL=true
SECURE_SSL_REDIRECT=true

# CORS Configuration for production
# Replace with your actual domain(s)
ALLOWED_ORIGINS=["https://your-domain.azurewebsites.net", "https://your-custom-domain.com"]

# Application Insights (optional)
# APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string